                        });
                    } else {
                        alert('D.A not allowed. Minimum distance eligible for D.A is 100 Kms round trip');
                        $(this).closest('div.form-row').find("input[name^='da_eligible_period_']").val('');
                        $(this).closest('div.form-row').find("input[name^='amount_']").val('');
                    }
                }
